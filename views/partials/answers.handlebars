<div class="answers">
  {{#each this}}
  <section class="answer">
    <div class="meta">
      <a class="has-text-weight-bold has-text-dark">{{user.username}}</a> Â· {{format_date created_at}}
    </div>
        <div class="text">
      {{answer_text}}
            <div class="stars">
                <form id="rating-form" class="rating" question_no="{{question_id}}" answer_no="{{id}}" action="">
                    <input class="star star-5" data-rate="5"  id="star-5" type="radio" answer_no="{{id}}" name="star"/>
                    <label class="star star-5" data-rate="5"  for="star-5">5</label>
                    <input class="star star-4" data-rate="4"  id="star-4" type="radio" answer_no="{{id}}" name="star"/>
                    <label class="star star-4" data-rate="4"  for="star-4">4</label>
                    <input class="star star-3" data-rate="3"  id="star-3" type="radio" answer_no="{{id}}" name="star"/>
                    <label class="star star-3" data-rate="3"  for="star-3">3</label>
                    <input class="star star-2" data-rate="2"  id="star-2" type="radio" answer_no="{{id}}" name="star"/>
                    <label class="star star-2" data-rate="2"  for="star-2">2</label>
                    <input class="star star-1" data-rate="1"  id="star-1" type="radio" answer_no="{{id}}" name="star"/>
                    <label class="star star-1" data-rate="1" for="star-1">1</label>
                </form>
            </div>
        </div>
    </section>
  {{/each}}
</div>
