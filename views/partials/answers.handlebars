<div class="answers">
  {{#each this}}
  <section class="answer">
    <div class="meta">
      {{user.username}} on {{format_date created_at}}
    </div>
    <div class="text">
      {{answer_text}}
           <div class="stars">
  <form class="rating" action="">
    <input class="star star-5 rating-item" data-rate="5"  id="star-5" type="radio" name="star"/>
    <label class="star star-5 rating-item" data-rate="5"  for="star-5">5</label>
    <input class="star star-4 rating-item" data-rate="4"  id="star-4" type="radio" name="star"/>
    <label class="star star-4 rating-item" data-rate="4"  for="star-4">4</label>
    <input class="star star-3 rating-item" data-rate="3"  id="star-3" type="radio" name="star"/>
    <label class="star star-3 rating-item" data-rate="3"  for="star-3">3</label>
    <input class="star star-2 rating-item" data-rate="2"  id="star-2" type="radio" name="star"/>
    <label class="star star-2 rating-item" data-rate="2"  for="star-2">2</label>
    <input class="star star-1 rating-item" data-rate="1"  id="star-1" type="radio" name="star"/>
    <label class="star star-1 rating-item" data-rate="1" for="star-1">1</label>
  </form>
</div>
    </div>
  </section>
  {{/each}}
</div>