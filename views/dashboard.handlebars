

<article class="media is-flex-direction-column *-0">
    <div class="media-content">
     <div class="mb-5 pt-3 is-align-content-center m-0">
        <a href="/dashboard/add"><button id="create-question" class="button is-primary is-pulled-right">create question</button></a>
        
        <h2 class="title pb-4">dashboard: your questions</h2><hr>
{{#if questions.length}}
    </div>

    {{#each questions as |question|}}
        {{> question-info question}}
        
            <a href="/dashboard/edit/{{question.id}}"><button class="button mb-5 ml-5 has-text-success">edit question</button></a>
        </div>
    {{/each}}

{{else}}
<h6 class="pb-4 has-text-centered is-italic">you do not have questions at this time</h6>

{{/if}}
    </div>
</article>


