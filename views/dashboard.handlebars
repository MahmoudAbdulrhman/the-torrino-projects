
<div class="has-background-white column justify-content-between ">
    <a href="/dashboard/add/"><button id="create-question" class="button is-primary is-pulled-right">POST A
            QUESTION</button></a>
    <h2 class="subtitle is-5 has-text-dark mt-1">YOUR INQUIRIES</h2>
    <hr>

    <article class="column data-content">

        {{#if questions.length}}
        {{#each questions as |question|}}
        {{> question-info question}}
                        <div class="media-right trash-container">
                            <a href="/dashboard/question/{{id}}" class="has-text-grey-light"><i class="fa fa-comments"></i> </span>
                                <a href="/dashboard/edit-question/{{id}}" class="has-text-grey-light"><i class="fa fa-edit"></i></i></a>
                                <a href="/dashboard/edit-question/{{id}}" class="has-text-grey-light" question_number="{{id}}"><i class="fa fa-trash"></i> </a>
                        </div>
                    </div>
                </article>
            <hr>
        </div>
        {{/each}}
        {{else}}

<h6 class="pb-4 has-text-centered is-italic">YOU HAVE NO QUESTIONS POSTINGS AT THE MOMENT</h6>

{{/if}}
</article>
</div>

