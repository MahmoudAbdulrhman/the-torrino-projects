<div class="media-content ">
    <a href="/dashboard/create/"><button id="create-question" class="button is-primary is-pulled-right">create
            question</button></a>
    <section class="section has-background-grey-lighter ">
        <div class="container has-text-centered ">
            <div class="columns">
                <div class="column">
                    {{#if Questions.length}}
                    <section>
                        <h2>Your questions</h2>
                        <ol>
                            {{#each Questions as |question|}}
                            <li>
                                {{> question-info question}}
                                <a href="/dashboard/edit/{{question.id}}" class="edit-link">Edit question</a>
                            </li>
                            {{/each}}
                        </ol>
                    </section>
                    {{else}}
                    <h6 class="pb-4 has-text-centered is-italic">you do not have posts at this time</h6>
                    {{/if}}
                </div>
            </div>
        </div>
    </section>
</div>